[Unit]
Description=Setup Kubernetes Routes

[Service]
Type=oneshot
RemainAfterExit=true

# Setup binaries
ExecStartPre=/usr/bin/bash -c 'ip route add 10.200.2.0/24 dev eth0'
ExecStartPre=/usr/bin/bash -c 'ip route add 10.200.3.0/24 dev eth0'

# Dummy ExecStart that exits immediately (required for Type=oneshot)
ExecStart=/usr/bin/true

[Install]
WantedBy=multi-user.target
